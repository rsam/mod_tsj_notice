   <param name="count" type="text" default="10" label="Количество" description="Укажите желаемое количество выводимых материалов" />
   <param name="template" type="filelist" default="default.php" directory="/modules/mod_tsj_notice/tmpl" filter="\.php$" hide_none="1" hide_default="1" label="Шаблон" description="Выберите шаблон модуля" />
